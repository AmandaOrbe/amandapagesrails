 <div class="cards">
  <div class="row">
    <%@articles.each do |article|%>
    <div class="col-xs-12 col-sm-6  col-md-4">
      <div class="card article-card">
        <div class="article-img-frame">
          <% if article.image %>
            <%= image_tag article.image,  class: "image-card" %>
          <% else %>
            <%= image_tag "ux-animations1.png",  class: "image-card" %>
          <% end %>
        </div>
        <h4><%= link_to article.title, article.url %></h4>
        <h5><%= link_to article.description, article.url %></h5>
        <%=link_to edit_reference_path(article)do%>
        <i class="fa fa-facebook"></i>
        <% end %>
        <%=link_to references_delete_path(article),  method: :delete,  data: { confirm: "Are you sure?" } do%>
        <i class="fa fa-trash-o"></i>
        <% end %>
        <div class="card-tags">
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

