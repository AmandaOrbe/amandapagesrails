<div class="add-button" data-toggle="modal" data-target="#myModal">

  <%= image_tag "plus_sign.png",  class: "plus-sign" %>


</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">


          <h3 class="modal-title" id="myModalLabel">ADD A NEW REFERENCE</h3>
        </div>
         <div class="modal-container">
        <div class="modal-body">
          <p class="modal-title">Choose a reference type</p>
            <%= form_for [@reference] do |f| %>
              <div class="category-buttons">
                <div class="category-frame ">
                  <div class="category-icon">
                    <i class="fa fa-file"></i>
                  </div>
                  <div class="category-label">
                    <%= f.label :category_article, "New article"  %>
                  </div>
                  <div class="radio-button">
                    <%= f.radio_button(:category, "article", :checked => (@reference.category == 'article'), class: 'rb')  %>
                  </div>

                </div>
                <div class="category-frame">
                  <div class="category-icon">
                    <i class="fa fa-desktop"></i>
                  </div>
                   <div class="category-label">
                    <%= f.label :category_page, "New page"  %>
                  </div>
                  <div class="radio-button">
                    <%= f.radio_button(:category, "page", :checked => (@reference.category == 'page'), class: 'rb') %>
                  </div>

                </div>
                <div class="category-frame">
                  <div class="category-icon">
                    <i class="fa fa-wrench"></i>
                  </div>
                  <div class="category-label">
                    <%= f.label :category_tool, "New tool"  %>
                  </div>
                  <div class="radio-button">
                    <%= f.radio_button(:category, "tool", :checked => (@reference.category == 'tool'), class: 'rb') %>
                  </div>
                </div>
              </div>
              <div class="input">
                <%= f.label :url, "URL", class: "form-label"  %>
                <%=f.text_field :url, class: "form-input url" %>
              </div>
              <div class="input">
                <%= f.label :notes, "notes", class: "form-label "   %>
                <%=f.text_area :notes, class: "form-input notes" %>
              </div>
           <div class="modal-footer">
             <%= f.submit "SUBMIT!", class: "btn btn-sumbit" %>
           </div>

            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

