
<div>
  <%=link_to "add a new article" ,  new_article_path%></p>
</div>
     <div class="cards">
      <div class="row">
        <%@articles.each do |article|%>

          <div class="col-xs-12 col-sm-6  col-md-4">
            <div class="card article-card">

                  <h3><%= link_to article.title, article.url %></h3>
                  <h5><%= link_to article.headlines, article.url %></h5>


                <p><span class="red">by</span> <%= article.author%></p>
                <p class="gray narrow"><%= article.date%></p>
                <%=link_to "update this article" , edit_article_path(article)%></p>
                <%=link_to "delete" , articles_delete_path(article),  method: :delete,  data: { confirm: "Are you sure?" }%>
                <div class="card-tags">



              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

