<h1><%=@page.title  %></h1>
<p><%=@page.author  %></p>
<%=link_to "visit_page" ,  @page.url, class: "btn btn-success"%>
<%=link_to "Update this page" ,  edit_page_path(@page), class: "btn btn-warning"%>
<%=link_to "delete this page" ,  pages_delete_path(@page), method: :delete,  data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>
